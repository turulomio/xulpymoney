#Consultas BD
con=Conection().open()

checked=""
if form.has_key('inactivas'):
    if form['inactivas']=="on":
        checked = 'checked="true"'
        cur=Inversion().cursor_listado(True,hoy())
    else:
        cur=Inversion().cursor_listado(False,hoy())
